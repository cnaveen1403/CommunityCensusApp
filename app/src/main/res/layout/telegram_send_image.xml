<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/paytm_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/paytm_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:text="Send Image"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/ivAddProfileImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="24dp"
            android:gravity="center"
            android:src="@drawable/ic_add_photo"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            android:background="@drawable/paytm_border"/>

        <EditText
            android:id="@+id/et_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_toRightOf="@+id/ivAddProfileImage"
            android:hint="your message"
            android:paddingLeft="12dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="CANCEL"
                android:textColor="@color/paytm_color"
                android:theme="@style/SEND"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="SEND"
                android:textColor="@color/paytm_color"
                android:theme="@style/MyButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>